@using EntityLayer.Concrete
@model List<Testimonial>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="row ">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Referans Listesi</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    <div class="form-check form-check-muted m-0">
                                        <label class="form-check-label">
                                            <input type="checkbox" class="form-check-input">
                                        </label>
                                    </div>
                                </th>
                                <th>#</th>
                               <th> Ad Soyad </th>
                                <th> Şirket </th>
                                <th> Unvan </th>
                                <th> Sil </th>
                                <th> Detaylar </th>
                                
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="form-check form-check-muted m-0">
                                            <label class="form-check-label">
                                                <input type="checkbox" class="form-check-input">
                                            </label>
                                        </div>
                                    </td>

                                    <td><img src="@item.ImageUrl" alt="image" /></td>
                                    <td>@item.ClientName</td>
                                    <td> @item.Company </td>
                                    <td> @item.Title </td>
                                    <td> <a href="/Testimonial/TestimonialDelete/@item.TestimoialID" class="btn btn-danger">Sil</a> </td>
                                    <td> <a href="/Testimonial/EditTestimonial/@item.TestimoialID" class="btn btn-warning" style="background-color:blanchedalmond ; color:red"> Detaylar</a> </td>
                                 
                                    
                                </tr>
                            }

                            
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="table-responsive">
    <a href="/Testimonial/AddTestimonial/" class="btn btn-primary">Yeni Referans Ekle</a>
</div>


