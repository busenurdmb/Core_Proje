@model EntityLayer.Concrete.WriterMessage
@{
    ViewData["Title"] = "SenderMessageDetails";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <p class="card-description">Mesaj Detay Sayfası </p>
            <form class="forms-sample">
                @*<form class="form-group">*@


                @Html.HiddenFor(x => x.WriterMessageID, new { @class = "form-control" })
                <br />
                @Html.Label("Alıcı Adı")
                @Html.TextAreaFor(x => x.ReceiverName, new { @class = "form-control" })
                <br />
                @Html.Label("Alıcı Mail")
                @Html.TextAreaFor(x => x.Receiver, new { @class = "form-control" })
                <br />
                @Html.Label("Tarih")
                @Html.TextAreaFor(x => x.Date, new { @class = "form-control" })
                <br />
                @Html.Label("Konu")
                @Html.TextAreaFor(x => x.Subject, new { @class = "form-control" })
                <br />
                @Html.Label("Mesaj")
                @Html.TextAreaFor(x => x.MessageContent, 10, 3, new { @class = "form-control" })
                <br />
                <a asp-action="Index" class="btn btn-primary">İletişim Sayfası</a>
                @*</form>*@
            </form>
        </div>
    </div>
</div>



