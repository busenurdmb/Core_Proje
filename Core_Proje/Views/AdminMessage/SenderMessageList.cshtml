@using EntityLayer.Concrete
@model List<WriterMessage>
@{
    ViewData["Title"] = "SenderMessageList";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yazar-Admin Gİden Kutusu</h4>

            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Alıcı Adı</th>
                            <th>Konu</th>
                            <th>Tarih</th>
                            <th>Sil</th>
                            <th>Mesajı Gör</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th>
                                    @item.WriterMessageID
                                </th>
                                <td>
                                    @item.ReceiverName
                                </td>
                                <td>@item.Subject</td>

                                <td>@item.Date.ToShortDateString()</td>
                                <th>
                                    <a href="/AdminMessage/Delete/@item.WriterMessageID" class="btn btn-danger">Sil</a>

                                </th>
                                <th>
                                    <a href="/AdminMessage/MessageDetails/@item.WriterMessageID" class="btn btn-warning" style="background-color:blanchedalmond ; color:red">Mesajı Gör</a>
                                </th>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<div class="table-responsive">

</div>

